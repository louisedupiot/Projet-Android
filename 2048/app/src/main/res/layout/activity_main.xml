<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E19330"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre_jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/bouton_jouer"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="130dp"
        android:text="JOUER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre_jeu" />

    <Button
        android:id="@+id/bouton_quitter"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:text="QUITTER"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bouton_jouer" />

</androidx.constraintlayout.widget.ConstraintLayout>